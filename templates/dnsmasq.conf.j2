server={{ s.server }}@{{ s.target }}{% if s.port is defined %}#{{ s.port }}{% endif %}
{%- endfor -%}

{%- if dnsmasq_configure_user is defined -%}
user={{ dnsmasq_configure_user }}
{%- endif %}

{%- if dnsmasq_configure_group is defined -%}
group={{ dnsmasq_configure_group }}
{%- endif -%}

{%- for i in dnsmasq_configure_interfaces | default([]) -%}
interface={{ i }}
{%- endfor -%}

{%- for ei in dnsmasq_configure_except_interfaces | default([]) -%}
except-interface={{ ei }}
{%- endfor -%}

{%- for a in dnsmasq_configure_listen_addresses | default([]) -%}
listen-address={{ a }}
{%- endfor -%}

{%- for i in dnsmasq_configure_no_dhcp_interfaces | default([]) -%}
no-dhcp-interface={{ i }}
{%- endfor -%}

{%- if dnsmasq_configure_bind_interfaces | default(False) -%}
bind-interfaces
{%- endif -%}

{%- if dnsmasq_configure_no_hosts | default(False) -%}
no-hosts
{%- endif -%}

{%- for hf in dnsmasq_configure_addn_hosts | default([]) -%}
addn-hosts={{ hf }}
{%- endfor -%}

{%- if dnsmasq_configure_expand_hosts | default(False) -%}
expand-hosts
{%- endif -%}

{%- for d in dnsmasq_configure_domains | default([]) -%}
domain={{ d.domain }}{% if d.subnet is defined %},{{ d.subnet }}{% elif d.range is defined %},{{ d.range.from }},{{ d.range.to }}{% endif %}
{%- endfor -%}

{%- for r in dnsmasq_configure_dhcp_ranges | default([]) -%}
{%- if r.subnet is defined -%}
dhcp-range={{ r.subnet }}{% if r.static | default(False) %},static{% endif %}{% if r.ra_only | default(False) %},ra-only{% endif %}{% if r.ra_stateless | default(False) %},ra-stateless{% endif %}{% if r.ra_names | default(False) %}, ra-names{% endif %}{% if r.duration is defined %},{{ r.duration }}{% endif %}
{%- else -%}
dhcp-range={% if r.set is defined %}set:{{ r.set }},{% endif %}{{ r.range.from }},{{ r.range.to }}{% if r.slaac | default(False) %},slaac{% endif %}{% if r.netmask is defined %},{{ r.netmask }}{% endif %}{% if r.prefix is defined %},{{ r.prefix }}{% endif %}{% if r.duration is defined %},{{ r.duration }}{% endif %}
{%- endif -%}
{%- endfor -%}

{%- if dnsmasq_configure_enable_ra | default(False) -%}
enable-ra
{%- endif -%}

{%- for h in dnsmasq_configure_dhcp_hosts | default([]) -%}
dhcp-host={% if h.macs is defined %}{{ h.macs | join(",") }}{% else %}{{ h.mac }}{% endif %}{% if h.host is defined %},{{ h.host }}{% endif %}{% if h.address is defined %},{{ h.address }}{% endif %}{% if h.ipv6 is defined %},[{{ h.ipv6 }}]{% endif %}{% if h.duration is defined %},{{ h.duration }}{% endif %}{% if h.infinite | default(False) %},infinite{% endif %}{% if h.ignore | default(False) %},ignore{%- endif %}{% if h.ignore_all | default(False) %},id:*{% endif %}{% if h.set is defined %},set:{{ h.set }}{% endif %}
{%- endfor -%}

{%- if dnsmasq_configure_dhcp_ignore_tag is defined -%}
dhcp-ignore=tag:{{ dnsmasq_configure_dhcp_ignore_tag }}
{%- endif -%}

{%- for vc in dnsmasq_configure_dhcp_vendor_classes | default([]) -%}
dhcp-vendorclass=set:{{ vc.set }},{{ vc.includes }}
{%- endfor -%}

{%- for uc in dnsmasq_configure_dhcp_user_classes | default([]) -%}
dhcp-userclass=set:{{ uc.set }},{{ uc.includes }}
{%- endfor -%}

{%- for m in dnsmasq_configure_dhcp_macs | default([]) -%}
dhcp-mac=set:{{ m.set }},{{ m.mac_pattern }}
{%- endfor -%}

{%- if dnsmasq_configure_read_ethers | default(False) -%}
read-ethers
{%- endif -%}

{%- for o in dnsmasq_configure_dhcp_options | default([]) -%}
dhcp-option{% if o.force | default(False) %}-force{% endif %}={% if o.tag is defined %}{{ o.tag }},{% endif %}{{ o.opt }},{% if o.val is defined %}{{ o.val }}{% elif o.vals is defined %}{{ o.vals | join(",") }}{% endif %}
{%- endfor -%}

{%- for b in dnsmasq_configure_dhcp_boots | default([]) -%}
dhcp-boot={% if b.tag is defined -%}tag:{{ b.tag }},{% elif b.tags is defined %}{% for t in b.tags %}tag:{{ t }},{% endfor %}{% endif %}{{ b.file }}{% if b.tftp_servername is defined %},{{ b.tftp_servername }}{% endif %}{% for sn in b.tftp_servernames | default([]) %},{{ sn }}{% endfor %}
{%- endfor -%}

{%- for m in dnsmasq_configure_dhcp_matches | default([]) -%}
dhcp-match={% if m.set is defined %}set:{{ m.set }}{% else %}{{ m.opt }}{% endif %},{{ m.val }}
{%- endfor -%}

{%- for pp in dnsmasq_configure_pxe_prompts | default([]) -%}
pxe-prompt={{ pp.prompt | to_json }}{% if pp.wait is defined %},{{ pp.wait }}{% endif %}
{%- endfor -%}

{%- for ps in dnsmasq_configure_pxe_services | default([]) -%}
pxe-service={{ ps.id }},{{ ps.name | to_json }}{% if ps.image is defined %},{{ ps.image }}{% endif %}{% if ps.tftp_server is defined %},{{ ps.tftp_server }}{% endif %}
{%- endfor -%}

{%- if dnsmasq_configure_enable_tftp | default(False) -%}
enable-tftp
{%- endif -%}

{%- if dnsmasq_configure_tftp_root is defined -%}
tftp-root={{ dnsmasq_configure_tftp_root }}
{%- endif -%}

{%- if dnsmasq_configure_tftp_no_fail | default(False) -%}
tftp-no-fail
{%- endif -%}

{%- if dnsmasq_configure_tftp_secure | default(False) -%}
tftp-secure
{%- endif -%}

{%- if dnsmasq_configure_tftp_no_blocksize | default(False) -%}
tftp-no-blocksize
